# OSS-Fuzz Dockerfile for Unicity
FROM gcr.io/oss-fuzz-base/base-builder

# Install dependencies
RUN apt-get update && apt-get install -y \
    cmake \
    libboost-system-dev \
    && rm -rf /var/lib/apt/lists/*

# Clone the project
RUN git clone --depth 1 https://github.com/unicitynetwork/unicity.git $SRC/unicity

# Set working directory
WORKDIR $SRC/unicity

# Copy build script
COPY build.sh $SRC/
